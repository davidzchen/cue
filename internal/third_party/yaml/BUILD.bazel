load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "apic.go",
        "decode.go",
        "parserc.go",
        "readerc.go",
        "resolve.go",
        "scannerc.go",
        "yaml.go",
        "yamlh.go",
        "yamlprivateh.go",
    ],
    importpath = "cuelang.org/go/internal/third_party/yaml",
    visibility = ["//:__subpackages__"],
    deps = [
