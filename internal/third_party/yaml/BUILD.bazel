go_test(
    name = "go_default_test",
    srcs = ["decode_test.go"],
    data = glob(["testdata/**"]),
    embed = [":go_default_library"],
    deps = [
        "//cue/ast:go_default_library",
        "//cue/format:go_default_library",
    ],
)
